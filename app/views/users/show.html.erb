                  <% @user_cars_as_coach.each do |car| %>
                    <div class="container-card">
                      <div class="card">
                        <div class="card-bg" style="background-image: url('https://c8.alamy.com/compfr/2j8w1hf/affiche-de-course-vintage-1960s-24-heures-du-mans-1966-2j8w1hf.jpg');">
                          <div class="content">
                            <h3 class="card'heading"><%= car.model %></h3>
                            <%= button_to "Voir cette voiture", car_path(car.id), method: :get, class: "lg:text-sm text-lg font-bold" %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
              <% else %>
                <div class="account-setting">
                  <h1>Aucune voiture en tant que coach.</h1>
                </div>
              <% end %>
              <% unless @user_cars_as_driver.empty? %>
                <h1>Mes voitures en tant que driver :</h1>
                  <% @user_cars_as_driver.each do |car|%>
                    <div class="container-card">
                      <div class="card">
                        <div class="card-bg" style="background-image: url('https://c8.alamy.com/compfr/2j8w1hf/affiche-de-course-vintage-1960s-24-heures-du-mans-1966-2j8w1hf.jpg');">
                          <div class="content">
                            <h3 class="card'heading"><%= car.model %></h3>
                            <%= button_to "Voir cette voiture", car_path(car.id), method: :get, class: "lg:text-sm text-lg font-bold" %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
              <% else %>
                <div class="account-setting">
                  <h1>Aucune voiture en tant que coach.</h1>
                </div>
              <% end %>
            </div>

            <div class="profile-settings tab">
              <div class="account-setting">
                <h1>Palmarès</h1>
                <p><%= @user.awards %></p>
              </div>
            </div>

            <div class="profile-settings tab">
              <% if my_profile? %>
                  <div class="account-setting">
                    <h1>Mes meetings en tant que coach</h1>
                      <% @user_meetings_as_coach.each do |coach_meeting|%>
                        <p><%= coach_meeting.meeting_type %></p>
                        <%= button_to "Voir ce meeting", meeting_path(coach_meeting.id), method: :get, class: "lg:text-sm text-lg font-bold" %>
                        <% if Feedback.find_by(meeting_id: coach_meeting.id).nil? %>
                          <% unless is_first_contact_or_debrief?(coach_meeting) %>
                            <p>Vous devez remplir le feedback</p>
                            <%= button_to "Remplir le feedback", new_feedback_path, method: :get, params:{meeting_id: coach_meeting.id} %>
                          <% end %>
                        <% else %>
                          <%= button_to "Voir le feedback", feedback_path(Feedback.find_by(meeting_id: coach_meeting.id).id), method: :get %>
                        <% end %>
                      <% end %>
                  </div>
                  <div class="account-setting">
                    <h1>Mes meetings en tant que driver</h1>
                      <% @user_meetings_as_driver.each do |driver_meeting|%>
                        <p><%= driver_meeting.meeting_type %></p>
                        <%= button_to "Voir ce meeting", meeting_path(driver_meeting.id), method: :get, class: "lg:text-sm text-lg font-bold" %>
                        <% unless Feedback.find_by(meeting_id: driver_meeting.id).nil? %>
                          <%= button_to "Voir le feedback", feedback_path(Feedback.find_by(meeting_id: driver_meeting.id).id), method: :get %>
                        <% end %>
                      <% end %>
                  </div>
              <% else %>
                <div class="account-setting">
                  <h1>Vous n'avez pas accés à c'est informations !</h1>
                </div>
              <% end %>
            </div>
        </div>
      </div>
    </div>

    <% if my_profile? %>
      <%= button_to "Ajouter des moyens de communication", com_means_path, method: :get, class: "lg:text-sm text-lg font-bold" %>
    <% end %>

