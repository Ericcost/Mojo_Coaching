<%= form_with url: availabilities_path do |f| %>

  <div class="form-group flex flex-col mb-6">
    <%= f.label :Coach %>
    <%= f.text_field :user_id, :readonly => true, :placeholder => current_user.first_name + " " + current_user.last_name, class: 'text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400', prompt: "Choisis une disponibilité" %>
  </div>

  <%= f.label :Disponibilité %>

  <div class="form-group flex flex-col mb-6">
    <%= f.label :De %>
    <%= f.datetime_field :start_date, step: 1800, class: 'text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400', prompt: "Choisis une disponibilité" %>
  </div>

  <div class="form-group flex flex-col mb-6">
    <%= f.label :A %>
    <%= f.datetime_field :end_date, step: 1800, class: 'text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400', prompt: "Choisis une disponibilité" %>
  </div>
  
  
  <%= f.submit %>
<% end %>
