
<div class="grid h-10  bg-base-300 rounded-box place-items-stretch">
<%= form_with url: availabilities_path do |f| %>
<div class='flex items-center justify-center min-h-screen from-teal-100 via-blue-200 to-blue-500 bg-gradient-to-br'>
		<div class='w-full max-w-lg px-10 py-8 mx-auto bg-white rounded-lg shadow-xl'>
			<div class='max-w-md mx-auto space-y-6'>
					<h2 class="text-2xl font-bold ">Propose tes creneaux</h2>
					<p class="my-4 opacity-70">ne pas hesitier a mettre des plages horaires, l'application les decoupera automatiquement en creneau de 30 min</p>
					<hr class="my-6">

        <div>

          <%= f.label :Coach %>
          <%= f.text_field :user_id, :readonly => true, :placeholder => current_user.first_name + " " + current_user.last_name, class: "p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none" %>

        </div>
          <%= f.label :De %>
          <%= f.datetime_field :start_date, step: 1800, class: "p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none", prompt: "Choisis une disponibilité" %>

        <div>
          <%= f.label :A %>
          <%= f.datetime_field :end_date, step: 1800, class: "p-3 mt-2 mb-4 w-full bg-slate-200 rounded border-2 border-slate-200 focus:border-slate-600 focus:outline-none", prompt: "Choisis une disponibilité" %>
        </div>

        <div>
          <%= f.submit 'Enregistrer', class: "py-3 px-6 my-2 bg-blue-200 text-white font-medium rounded hover:bg-blue-400 cursor-pointer ease-in-out duration-300" %>
        </div>

          <%= link_to "Retour a l'acceuil", root_path %>
          
			</div>
		</div>
	</div>
  <% end %>
</div>
