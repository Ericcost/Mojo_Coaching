<h1>New meeting</h1>

<%= render "form", meeting:@meeting %>

<br>

    <div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
      <div class="flex flex-col bg-white shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-3xl w-50 max-w-md">
        <div class="font-medium self-center text-xl text-center sm:text-3xl text-gray-800">Créez votre rendez-vous</div>
        <div class="mt-4 self-center text-xl sm:text-sm text-gray-800">Remplis tous les champs avant de valider</div>

        <div class="mt-10">
          <form action="#">

        <div class="flex flex-col mb-6">
          <div class="relative">
            <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
              <span>
                <i class="fas fa-lock text-blue-500"></i>
              </span>
            </div>
          </div>
        </div>
        
            <%= form_with model: @meeting, method: :post do |f|%>
              
              <div class="form-group">
                <%= f.label :availability, class: 'mb-2' %>
                <%= f.select :availability, options_for_select(Availability.where(user_id: @coach.id)), {prompt: 'Indiquez vos disponibilités'} %>
              </div>
                
              <div class="form-group">
                <%= f.label :meeting_type, class: 'mb-2' %>
                <%= f.select :meeting_type, options_for_select(Meeting.meeting_types), {prompt: 'Select meeting type'} %>
              </div>

              <div class="flex flex-col mb-6">
                <label for="password" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">Video url</label>
                <div class="relative">
                  <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                    <span>
                      <i class="fas fa-lock text-blue-500"></i>
                    </span>
                  </div>
                  <input id="password" type="" name="password" class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-2xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" placeholder="Lien de votre vidéo ici"/>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :car_id, class: 'mb-2' %>
                <%= f.select :car_id, options_for_select(JoinTableUserCar.where(user_id: @coach.id, is_coach: true)), {prompt: ''} %>
              </div>

              <div class="form-group">
                <%= f.label :track_id, class: 'mb-2' %>
                <%= f.select :track_id, options_for_select(JoinTableUserTrack.where(user_id: @coach.id, is_coach: true)), {prompt: ''} %>
              </div>

              <div class="form-group">
                <%= f.label :com_mean_id, class: 'mb-2' %>
                <%= f.select :com_mean_id, options_for_select(JoinTableUserComMean.where(user_id: @coach.id).each {|com_mean| ComMean.find(com_mean.id).communication_mean}), {prompt: ''} %>
              </div>
              
              <%= f.submit %>
            <% end %>



<div>
  <%= link_to "Back to meetings", meetings_path %>
</div>
